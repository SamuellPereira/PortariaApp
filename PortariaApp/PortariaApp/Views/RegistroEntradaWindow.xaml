<Window x:Class="PortariaApp.Views.RegistroEntradaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸšª REGISTRO DE ENTRADA" Height="550" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃTULO -->
        <TextBlock Grid.Row="0" Text="ðŸ” LOCALIZAR VISITANTE" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,30" 
                   HorizontalAlignment="Center" Foreground="DarkGreen"/>

        <!-- PROCURAR + DADOS -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LISTA DE VISITANTES -->
            <Border Grid.Column="0" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="20">
                    <TextBlock Text="ðŸ‘¥ VISITANTES CADASTRADOS" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBox x:Name="TxtPesquisar" Height="40" FontSize="14" 
                             TextChanged="TxtPesquisar_TextChanged" Margin="0,0,0,15"/>
                    <TextBlock Text="Digite Nome ou RG" Foreground="Gray" Margin="0,0,0,10"/>

                    <DataGrid x:Name="DataGridVisitantes" Height="320" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ðŸ‘¤ NOME" Binding="{Binding Nome}" Width="*"/>
                            <DataGridTextColumn Header="ðŸ“„ RG" Binding="{Binding RG}" Width="140"/>
                            <DataGridTextColumn Header="ðŸ“± TELEFONE" Binding="{Binding Telefone}" Width="160"/>
                            <DataGridTextColumn Header="ðŸš— PLACA" Binding="{Binding Placa}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- DADOS ENTRADA -->
            <Border Grid.Column="1" BorderBrush="DarkGreen" BorderThickness="2" CornerRadius="10" Margin="20,0,0,0">
                <StackPanel Margin="25">
                    <TextBlock Text="ðŸ“‹ INFORMÃ‡Ã•ES DA ENTRADA" FontSize="18" FontWeight="Bold" Margin="0,0,0,25"/>

                    <!-- NOME SELECIONADO -->
                    <Border Background="LightGreen" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                        <TextBlock x:Name="TxtVisitanteNome" Text="Selecione um visitante" 
                                   FontSize="20" FontWeight="Bold" Foreground="DarkGreen"/>
                    </Border>

                    <!-- FILIAL ORIGEM -->
                    <TextBlock Text="ðŸ¢ FILIAL ORIGEM:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="ComboFilial" Height="45" FontSize="14" Margin="0,0,0,20" FontWeight="SemiBold">
                        <ComboBoxItem Content="Matriz" IsSelected="True"/>
                        <ComboBoxItem Content="Filial"/>
                        <ComboBoxItem Content="Filial PB"/>
                        
                    </ComboBox>

                    <!-- EMPRESA -->
                    <TextBlock Text="ðŸ­ EMPRESA QUE MANDOU:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtEmpresa" Height="45" FontSize="14" Margin="0,0,0,30"/>

                    <!-- BOTÃƒO CONFIRMAR -->
                    <Button Content="âœ… CONFIRMAR ENTRADA" Height="55" FontSize="18" FontWeight="Bold"
                            x:Name="BtnConfirmar" Click="BtnConfirmar_Click"
                            Background="DarkGreen" Foreground="White" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>

        <Button Grid.Row="2" Content="âŒ CANCELAR" Width="140" Height="45" 
                Click="BtnCancelar_Click" Background="LightCoral" 
                HorizontalAlignment="Right" FontWeight="Bold"/>
    </Grid>
</Window>
