<Window x:Class="PortariaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🚪 Portaria Nichibras" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="DarkBlue">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🚪 Portaria Nichibras" FontSize="24" FontWeight="Bold" Foreground="White" Margin="20,0"/>
                <TextBlock x:Name="Desenvolvido" Text="Desenvolvido por Samuel Pereira" FontSize="16" Foreground="Gold" Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- TABS -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- ABA 1: CADASTRO -->
            <TabItem Header="👤 CADASTRO">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- FORMULÁRIO COM MODO EDIÇÃO -->
                    <StackPanel Grid.Column="0" Margin="20">
                        <TextBlock Text="📝 NOVO VISITANTE" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                        
                        <!-- BOTÃO EDITAR/SALVAR -->
                        <Button x:Name="EditarBtn" Content="✏️ EDITAR" 
                                Command="{Binding EditarCommand}" 
                                Width="140" Height="45" Margin="0,0,0,20" 
                                Background="#FFFFE0" FontWeight="Bold" FontSize="14"/>

                        <!-- TEXTBOX - BLOQUEADOS por padrão (IsReadOnly="True") -->
                        <TextBox Text="{Binding VisitanteSelecionado.Nome}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40" 
                                 Background="LightGray"/>
                        <TextBlock Text="👤 Nome Completo" Margin="5,0,0,8" Foreground="Gray"/>

                        <TextBox Text="{Binding VisitanteSelecionado.RG}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40"/>
                        <TextBlock Text="📄 RG" Margin="5,0,0,8" Foreground="Gray"/>

                        <TextBox Text="{Binding VisitanteSelecionado.CPF}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40"/>
                        <TextBlock Text="🆔 CPF" Margin="5,0,0,8" Foreground="Gray"/>

                        <TextBox Text="{Binding VisitanteSelecionado.Telefone}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40"/>
                        <TextBlock Text="📱 Telefone" Margin="5,0,0,8" Foreground="Gray"/>

                        <TextBox Text="{Binding VisitanteSelecionado.Placa}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40"/>
                        <TextBlock Text="🚗 Placa do Veículo" Margin="5,0,0,8" Foreground="Gray"/>

                        <TextBox Text="{Binding VisitanteSelecionado.Filial}" 
                                 IsReadOnly="True"
                                 Margin="5" FontSize="14" Height="40"/>
                        <TextBlock Text="🏢 Filial" Margin="5,0,0,20" Foreground="Gray"/>

                        <!-- BOTÕES DE AÇÃO -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="➕ NOVO" Command="{Binding NovoCommand}" Width="100" Height="40" Margin="5" Background="LightGreen"/>
                            <Button Content="💾 SALVAR" Command="{Binding SalvarCommand}" Width="100" Height="40" Margin="5" Background="LightBlue"/>
                            <Button Content="🗑️ EXCLUIR" Command="{Binding ExcluirCommand}" Width="100" Height="40" Margin="5" Background="LightCoral"/>
                            <Button Content="🔄 LIMPAR" Command="{Binding LimparCommand}" Width="100" Height="40" Margin="5"/>
                        </StackPanel>

                        <!-- STATUS -->
                        <TextBlock x:Name="StatusTxt" Text="✅ PRONTO PARA EDITAR" 
                                   FontSize="14" FontWeight="Bold" Margin="5,20,0,0"
                                   Foreground="Green"/>
                    </StackPanel>

                    <!-- LISTA -->
                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="20" Padding="15">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="WhiteSmoke" Offset="0"/>
                                <GradientStop Color="LightGray" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBox Text="{Binding Filtro, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="250" Height="35" Margin="0,5,15,5" 
                                         VerticalContentAlignment="Center"/>
                                <TextBlock Text="🔍 Filtrar por Nome/RG" 
                                           VerticalAlignment="Center" 
                                           Foreground="DarkBlue" FontWeight="Bold"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1" ItemsSource="{Binding VisitantesFiltrados}" 
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      SelectionMode="Single" SelectedItem="{Binding VisitanteSelecionado}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                                    <DataGridTextColumn Header="👤 NOME" Binding="{Binding Nome}" Width="*"/>
                                    <DataGridTextColumn Header="RG" Binding="{Binding RG}" Width="130"/>
                                    <DataGridTextColumn Header="🚗 PLACA" Binding="{Binding Placa}" Width="110"/>
                                    <DataGridTextColumn Header="⏰ ENTRADA" Binding="{Binding HoraEntrada, StringFormat=HH:mm:ss}" Width="110"/>
                                    <DataGridTextColumn Header="🕐 SAÍDA" Binding="{Binding HoraSaida, StringFormat=HH:mm:ss}" Width="110"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ABA 2: SAÍDA (MANTER IGUAL) -->
            <TabItem Header="🚗 SAÍDA">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="👥 VISITANTES PENDENTES DE SAÍDA" 
                               FontSize="24" FontWeight="Bold" Margin="0,0,0,25" Foreground="DarkRed"/>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding VisitantesPendentes}" 
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              Margin="0,0,0,25">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="👤 NOME" Binding="{Binding Nome}" Width="280" IsReadOnly="True"/>
                            <DataGridTextColumn Header="🚗 PLACA" Binding="{Binding Placa}" Width="130" IsReadOnly="True"/>
                            <DataGridTextColumn Header="⏰ ENTRADA" Binding="{Binding HoraEntrada, StringFormat=HH:mm:ss}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="📱 TELEFONE" Binding="{Binding Telefone}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="🕐 SAÍDA" Binding="{Binding HoraSaida, StringFormat=HH:mm:ss}" Width="140"/>
                            <DataGridTextColumn Header="🏢 FILIAL" Binding="{Binding Filial}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" Content="🔄 ATUALIZAR LISTA" Command="{Binding AtualizarListaCommand}" 
                            Width="220" Height="50" HorizontalAlignment="Center"
                            Background="Orange" Foreground="White" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- RODAPÉ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="➕ NOVO VISITANTE" Command="{Binding NovoCommand}" Width="160" Height="45" Margin="10" Background="LightGreen" FontWeight="Bold"/>
            <Button Content="🚪 REGISTRAR ENTRADA" Command="{Binding RegistrarEntradaCommand}" 
        Width="160" Height="45" Margin="5" Background="DarkGreen" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>
